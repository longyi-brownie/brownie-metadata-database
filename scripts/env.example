# Database Configuration (Certificate Authentication)
DB_HOST=postgres
DB_PORT=5432
DB_NAME=brownie_metadata
DB_USER=brownie-fastapi-server
DB_SSL_MODE=require
CERT_DIR=/certs

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379

# Metrics Sidecar Configuration
METRICS_PORT=9091

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_STRUCTURED=true

# Development/Testing
# For local development without Docker:
# DB_HOST=localhost
# DB_PORT=5432
# DB_SSL_MODE=disable
# REDIS_HOST=localhost
# REDIS_PORT=6379


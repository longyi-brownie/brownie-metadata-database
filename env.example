# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=brownie_metadata
DB_USER=brownie
DB_PASSWORD=brownie
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_INCLUDE_TIMESTAMPS=true
LOG_INCLUDE_CALLER=true
LOG_INCLUDE_PROCESS=true
LOG_STRUCTURED=true
LOG_FILE=
LOG_MAX_FILE_SIZE=10485760
LOG_BACKUP_COUNT=5
LOG_PERFORMANCE=true
LOG_SLOW_QUERY_THRESHOLD=1.0
LOG_SECURITY=true
LOG_AUDIT=true
LOG_AUDIT_EVENTS=create,update,delete,login,logout

# Metrics Configuration
METRICS_ENABLED=true
METRICS_ENDPOINT=/metrics
METRICS_PORT=8001
METRICS_TRACK_DATABASE_QUERIES=true
METRICS_TRACK_DATABASE_CONNECTIONS=true
METRICS_TRACK_DATABASE_TRANSACTIONS=true
METRICS_TRACK_INCIDENTS=true
METRICS_TRACK_USERS=true
METRICS_TRACK_TEAMS=true
METRICS_TRACK_ORGANIZATIONS=true
METRICS_TRACK_RESPONSE_TIMES=true
METRICS_TRACK_THROUGHPUT=true
METRICS_TRACK_ERROR_RATES=true
METRICS_TRACK_CUSTOM_METRICS=true
METRICS_RETENTION_DAYS=30

# JWT Configuration
JWT_SECRET_KEY=your-secret-key-here
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# Okta OIDC Configuration
OKTA_DOMAIN=your-okta-domain.okta.com
OKTA_CLIENT_ID=your-client-id
OKTA_CLIENT_SECRET=your-client-secret
OKTA_REDIRECT_URI=http://localhost:8000/auth/callback
